    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i>Danh sách sản phẩm</h3>
            <div class="row">

                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <button class="btn btn-primary" data-toggle="modal" data-target="#myModal"
                                onclick="setEmptyForModal()">
                                <i class="fa fa-edit "></i> New</button>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Brand</th>
                                            <th>Price</th>
                                            <th>Amount</th>
                                            <th>Date</th>
                                            <th>Image</th>
                                            <th>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each products}}
                                        <tr class="odd gradeX align-middle">
                                            <td class="center align-middle">{{this.id}}</td>
                                            <td class="center">{{this.name}}</td>
                                            <td class="center">
                                                <img src="{{getBrandImage this.brand ../brands}}" class="img-thumbnail"
                                                    style="width: 100px" />
                                            </td>
                                            <td class="center">
                                                <script>
                                                    fmNumber({{ this.price }})
                                                </script>
                                                đ
                                            </td>
                                            <td class="center">{{this.amount}}</td>
                                            <td class="center">
                                                <script>
                                                    formatDate('{{this.date}}')
                                                </script>
                                            </td>
                                            <td class="center">
                                                <img src="{{this.image}}" class="img-thumbnail" style="width: 100px" />
                                            </td>
                                            <td class="center">
                                                <button class="btn btn-primary btn-xs" data-toggle="modal"
                                                    data-target="#myModal"
                                                    onclick="setDataForModal({ id:{{this.id}}, name:'{{this.name}}', price:{{this.price}}, amount:{{this.amount}}, date:'{{this.date}}', image:'{{this.image}}', brand:'{{this.brand}}', description:'{{this.description}}' })"><i
                                                        class="fa fa-edit "></i>
                                                    Edit</button>
                                                <button class="btn btn-danger btn-xs" onclick="askForDelete({{this.id}})"><i
                                                        class="fa fa-trash-o"></i>
                                                    Delete</button>
                                            </td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                    <!--/content-panel -->
                </div><!-- /col-md-12 -->
